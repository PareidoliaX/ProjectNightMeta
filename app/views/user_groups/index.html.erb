<h1><%= @title %></h1>

<div id="groups_intro">
  <% if @user.should_sync %>
<p>User has not sync Meetup groups - provide instruction to sync</p>
  <% end %>
</div>

<div id="groups">
  <div class="group-sync">
  <%= form_tag "/user/groups/sync", {id: "sync_group_form"} do %>
  <input id="sync_group_btn" type="submit" value="Sync Meetup groups now"/>
  <% end %>
  </div>

  <div class="groups">
  <ul>
  <% @user.groups.each do | group | %>
  <li>
    <div class="group-img">
      <a href="/groups/<%= group.urlname %>"><img src="<%= group.mu_thumb_link %>"/> <%= group.mu_name %></a>
    </div>
  </li>
  <% end %>
  </ul>
  </div>
</div>

